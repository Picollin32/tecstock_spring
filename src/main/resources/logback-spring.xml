<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- DESENVOLVIMENTO: Console simples + Arquivo local -->
    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n</pattern>
            </encoder>
        </appender>
        
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/tecstock-dev.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/tecstock-dev-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>20MB</maxFileSize>
                <maxHistory>7</maxHistory>
                <totalSizeCap>200MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{40} - %msg%n</pattern>
            </encoder>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
        
        <logger name="tecstock_spring" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
    </springProfile>

    <!-- PRODUÇÃO (Dokploy/Hostinger): APENAS Console em JSON -->
    <springProfile name="prod">
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- Adiciona campos customizados -->
                <customFields>{"app":"tecstock","environment":"production"}</customFields>
                
                <!-- Inclui informações do MDC (Multi-tenancy context) -->
                <includeMdcKeyName>empresaId</includeMdcKeyName>
                <includeMdcKeyName>userId</includeMdcKeyName>
                <includeMdcKeyName>requestId</includeMdcKeyName>
                
                <!-- Performance: não incluir stack traces completos -->
                <shortenedLoggerNameLength>36</shortenedLoggerNameLength>
                
                <!-- Timestamp em ISO 8601 -->
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampPattern>
            </encoder>
        </appender>
        
        <!-- Fallback: Console simples se JSON encoder não disponível -->
        <appender name="CONSOLE_FALLBACK" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{ISO8601} %-5level [%thread] %logger{40} - %msg%n</pattern>
            </encoder>
        </appender>
        
        <root level="WARN">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
        
        <!-- Logs da aplicação em INFO -->
        <logger name="tecstock_spring" level="INFO"/>
        
        <!-- Security em WARN (evita logs excessivos de autenticação) -->
        <logger name="org.springframework.security" level="WARN"/>
        
        <!-- Hibernate: apenas erros -->
        <logger name="org.hibernate" level="ERROR"/>
        <logger name="org.hibernate.SQL" level="ERROR"/>
        
        <!-- Database pool: apenas erros -->
        <logger name="com.zaxxer.hikari" level="WARN"/>
    </springProfile>

    <!-- Loggers globais (todos os perfis) -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Suprimir logs desnecessários -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="WARN"/>
</configuration>
